<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Signup</title>
</head>
<body>
    <ul>
        {% for message in messages %}
            <li>{{message}}</li>

        {% endfor %}

    </ul>


    <h1>Signup</h1>
    {% if url %}

        <form action="{{url}}" method="post">
            <label for="name"></label>Name <input type="text" name="name" id="name">
            <label for="email"></label>Email <input type="email" name="email" id="email">
            <label for="password"></label>Password <input type="password" name="password" id="password">
            <label for="confirm">Confirm Password</label> <input type="password" name="confirm" id="confirm">
            <input type="submit" name="form.submitted"></input>
        </form>

    {% endif %}
</body>
</html>